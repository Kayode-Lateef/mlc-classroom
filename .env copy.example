# === APPLICATION ===
APP_NAME="MLC Classroom Management"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_ARTISAN
APP_DEBUG=false
APP_TIMEZONE=Europe/London
APP_URL=https://classroom.maidstonelearning.co.uk

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

BCRYPT_ROUNDS=12

# === LOGGING ===
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DEPRECATIONS_CHANNEL=null

# === DATABASE ===
DB_CONNECTION=mysql
DB_HOST=your_production_host
DB_PORT=3306
DB_DATABASE=your_production_database
DB_USERNAME=your_production_user
DB_PASSWORD=your_strong_production_password

# === SESSION & CACHE ===
SESSION_DRIVER=redis
SESSION_LIFETIME=480
SESSION_ENCRYPT=true
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# === REDIS ===
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# === MAIL (Production) ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your_sendgrid_api_key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@maidstonelearning.co.uk
MAIL_FROM_NAME="MLC Classroom"

# === SMS (Production) ===
SMS_PROVIDER=africastalking
SMS_USERNAME=your_production_username
SMS_API_KEY=your_production_api_key
SMS_SENDER_ID=MLC_CLASS
SMS_SANDBOX=false
SMS_DAILY_LIMIT=1000
SMS_MONTHLY_LIMIT=10000
SMS_LOW_BALANCE_THRESHOLD=1000

# === FILE UPLOADS (Production - S3) ===
FILESYSTEM_DISK=s3
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif

AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=eu-west-2
AWS_BUCKET=mlc-classroom-uploads

# === ACADEMIC SETTINGS ===
ACADEMIC_YEAR_START=09-01
ACADEMIC_YEAR_END=08-31
ATTENDANCE_MARK_WINDOW=60
AUTO_MARK_ABSENT=true

# === NOTIFICATIONS ===
NOTIFY_PARENT_ON_ABSENCE=true
NOTIFY_PARENT_ON_HOMEWORK=true
NOTIFY_TEACHER_ON_SUBMISSION=true

# === SYSTEM ===
STUDENT_ID_PREFIX=MLC
ENFORCE_EMAIL_VERIFICATION=true
PASSWORD_RESET_TIMEOUT=60
MULTI_CENTER_MODE=true
DEFAULT_CENTER_ID=1

# === VITE ===
VITE_APP_NAME="${APP_NAME}"