# === APPLICATION ===
APP_NAME="MLC Classroom Management"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Europe/London
APP_URL=https://portal.maidstonelearningcentre.co.uk/
APP_LOGO=logos/logo-mlc1.png

APP_LOCALE=en_GB
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_GB

BCRYPT_ROUNDS=12

# === LOGGING ===
LOG_CHANNEL=single
LOG_LEVEL=error

# === DATABASE ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=maidmfwf_mlcportal
DB_USERNAME=maidmfwf_mlcportal
DB_PASSWORD=maidmfwf_mlcportal


QUEUE_CONNECTION=database

