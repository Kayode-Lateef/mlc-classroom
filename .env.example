# === SESSION & CACHE (file-based for shared hosting) ===
SESSION_DRIVER=file
SESSION_LIFETIME=240
SESSION_ENCRYPT=true
CACHE_STORE=file
QUEUE_CONNECTION=sync

# === MAIL ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@maidstonelearning.co.uk
MAIL_FROM_NAME="MLC Classroom"

# === SMS ===
SMS_PROVIDER=voodoo
VOODOO_USERNAME=your_voodoo_username
VOODOO_PASSWORD=your_voodoo_password
VOODOO_SENDER_ID="MLC PORTAL"
SMS_DAILY_LIMIT=500
SMS_MONTHLY_LIMIT=5000
SMS_LOW_BALANCE_THRESHOLD=50

# === PAGINATION ===
PAGINATION_USERS=10
PAGINATION_STUDENTS=20
PAGINATION_TEACHERS=20
PAGINATION_PARENTS=20
PAGINATION_CLASSES=20
PAGINATION_ATTENDANCE=50
PAGINATION_HOMEWORK=20
PAGINATION_RESOURCES=24
PAGINATION_LOGS=50

# === FILE UPLOADS ===
FILESYSTEM_DISK=local
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif

# === ACADEMIC SETTINGS ===
ACADEMIC_YEAR_START=09-01
ACADEMIC_YEAR_END=08-31
ATTENDANCE_MARK_WINDOW=60
STUDENT_ATTENDANCE_HISTORY=30
STUDENT_HOMEWORK_HISTORY=20
STUDENT_MIN_AGE=4
STUDENT_MAX_AGE=18
STUDENT_PHOTO_MAX_SIZE=2048
AUTO_MARK_ABSENT=true

# === NOTIFICATIONS ===
NOTIFY_PARENT_ON_ABSENCE=true
NOTIFY_PARENT_ON_HOMEWORK=true
NOTIFY_TEACHER_ON_SUBMISSION=true

# === SYSTEM ===
STUDENT_ID_PREFIX=MLC
ENFORCE_EMAIL_VERIFICATION=false
PASSWORD_RESET_TIMEOUT=60
MULTI_CENTER_MODE=false
DEFAULT_CENTER_ID=1